<% layout('layout') -%>
<div id="intro" class="section scrollspy">
    <div class="container">
      <div class="row">
          <form class="col s12" method="post">
            <div class="row">
              <div  class="col s12">
                  <h2 class="center header text_h2"><span class="span_h2"> Edit Profile</span></h2>
              </div>
              <% if(message.length > 0) { %>

                <div class="card-panel col s12">
                  <p><span class="blue-text text-darken-2"> <%= message %></span><p>
                </div>

              <% } %>
            </div>
            <div class="row">
              <div class="input-field col l6 m12 s12">
                <input value="<%=user.name %>" id="name" name="name" type="text" class="validate">
                <label for="name">Name (Required)</label>
              </div>

              <div class="input-field col l6 m12 s12">
                <!-- <input placeholder="Select Year" id="year" type="text" class="validate">
                <label for="year">Year</label> -->

                <select id="year" name="year">
                  <option id="1" value="1">First</option>
                  <option id="2" value="2">Second</option>
                  <option id="3" value="3">Third</option>
                  <option id= "4" value="4">Fourth</option>
                </select>
                <label>Year</label>

                <script>
                //var selectedOption = <%= user.year %>;
                document.getElementById('<%= user.year %>').selected = true
                </script>
              </div>
            </div>
            <div class="row">
              <div class="input-field col l6 m12 s12">
                <input value="<%=user.rollno %>" id="rollno" name="rollno" type="text" class="validate">
                <label for="rollno">Roll No</label>
              </div>
              <div class="input-field col l6 m12 s12">
                <select id="scholar" name="scholar">
                  <option id="Hosteller" value="Hosteller">Hosteller</option>
                  <option id="Day Scholar" value="Day Scholar">Day Scholar</option>
                  <option id="PG" value="PG">PG</option>
                  <option id="Flat" value="Flat">Flat</option>
                </select>
                <label for="Scholar">Residence</label>

                <script>
                //var selectedOption = <%= user.year %>;
                document.getElementById('<%= user.scholar %>').selected = true
                </script>

              </div>
            </div>
            <!-- <div class="row">
              <div class="input-field col l6 m12 s12">
                <input placeholder="Enter password to set" id="password" name="password" type="text" class="validate">
                <label for="password">Password (Required)</label>
              </div>
              <div class="input-field col l6 m12 s12">
                <input placeholder="Re-enter your password" id="passwordrepeat" name="passwordrepeat" type="text" class="validate">
                <label for="passwordrepeat">Confirm Password (Required)</label>
              </div>
            </div> -->

            <div class="row">
              <div class="input-field col l12 m12 s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Save
                  <i class="mdl-material-icons fa fa-send right"></i>
                </button>
              </div>
            </div>

          </form>
        </div>
    </div>
</div>
